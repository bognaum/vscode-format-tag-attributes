{
	"name": "wrap-tag-attributes",
	"displayName": "Wrap tag attributes",
	"description": "It formats tag attributes to one lite or to many lines. ",
	"publisher": "Bognaum",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.68.0"
	},
	"categories": [
		"Formatters"
	],
	"activationEvents": [
		"onCommand:wrapTagAttribs.wrapAttribs",
		"onCommand:wrapTagAttribs.unwrapAttribs",
		"onCommand:wrapTagAttribs.toggleAttribs",
		"onCommand:wrapTagAttribs.wrapStyle",
		"onCommand:wrapTagAttribs.unwrapStyle",
		"onCommand:wrapTagAttribs.toggleStyle"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "wrapTagAttribs.wrapAttribs",
				"title": "WrapTagAttributes: Attributes - Wrap"
			},
			{
				"command": "wrapTagAttribs.unwrapAttribs",
				"title": "WrapTagAttributes: Attributes - Unwrap"
			},
			{
				"command": "wrapTagAttribs.toggleAttribs",
				"title": "WrapTagAttributes: Attributes - Toggle"
			},
			{
				"command": "wrapTagAttribs.wrapStyle",
				"title": "WrapTagAttributes: Style - Wrap"
			},
			{
				"command": "wrapTagAttribs.unwrapStyle",
				"title": "WrapTagAttributes: Style - Unwrap"
			},
			{
				"command": "wrapTagAttribs.toggleStyle",
				"title": "WrapTagAttributes: Style - Toggle"
			}
		],
		"menus": {
			"editor/title": [
				{"submenu": "wrapTagAttribs"}
			],
			"wrapTagAttribs": [
				{"command": "wrapTagAttribs.wrapAttribs"  , "group": "1"},
				{"command": "wrapTagAttribs.unwrapAttribs", "group": "1"},
				{"command": "wrapTagAttribs.toggleAttribs", "group": "1"},
				{"command": "wrapTagAttribs.wrapStyle"    , "group": "2"},
				{"command": "wrapTagAttribs.unwrapStyle"  , "group": "2"},
				{"command": "wrapTagAttribs.toggleStyle"  , "group": "2"}
			]
		},
		"submenus": [
			{
				"id": "wrapTagAttribs",
				"label": "Wrap Tag Attributes"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.68.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"typescript": "^4.5.4",
		"ts-loader": "^9.2.6",
		"webpack": "^5.66.0",
		"webpack-cli": "^4.9.1",
		"@vscode/test-electron": "^2.0.3"
	}
}
